package armVisible;
/**线程锁的案例*/
public class SynchronizedDemo {

	/**共享变量*/
	private boolean ready = false;
	private int result = 0;
	private int number = 1;
	
	/**写操作*/
	public void write() {
		ready = true;
		number = 2;
	}
	
	/**读操作*/
	public void read() {
		if (ready) {
			result = number * 3;
		}
		System.out.println("result的值为:"+result);;
	}
	
}
