<body>

	<h1>使用useBean完成自动匹配</h1>
	<jsp:useBean id="myUser" type="jspBase.bean.User" class="jspBase.bean.User" scope="page"/>
	<jsp:setProperty property="*" name="user"/>
	用户:<%=user.getUsername() %><br>
	密码:<%=user.getPassword() %><br>
</body>
