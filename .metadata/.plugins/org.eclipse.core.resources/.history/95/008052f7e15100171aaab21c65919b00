package bean;

import java.io.File;

import org.apache.commons.io.FileUtils;

import net.sf.json.JSONObject;

/**解析为JSON对象*/
public class ParseJSONObject {

	/**使用文件解析JSON对象*/
	public static void parseJSONObjectByFile() throws Exception{
		File file = new File("json/JSON对象.json");	//使用类路径,完成加载
//		file = new File(ParseJSONObject.class.getResource("/json/JSON对象.json"));
		//将文件整体读取为一个String
		String content = FileUtils.readFileToString(file);
		//创建JSON帝乡
		JSONObject jsonObject = new JSONObject().discard(content);
		
		
	}
}
