package javaThread;
/**里面有两个类*/
public class ThreadDemo extends Thread{

	@Override
	public void run(){
		try {
			int count = 0;
			for(int i=0; i<20 ;i++){
				String threadName = this.getName();	//获得线程的名字,名字由set()存入
				System.out.println("线程名为:"+threadName);
				System.out.println("出现了"+(++count)+"次");
				Thread.sleep(100);					//线程休眠100毫秒
			}
		} catch (InterruptedException e) {
			e.printStackTrace();
			System.err.println("多线程调用出现异常");
		}		
	}
	
	
	public static void main(String[] args) {
		//使用多态,父类的引用由子类实现
		Thread actor = new ThreadDemo();
		actor.setName("线程I");		//设置线程的名字
		//多次执行线程
		actor.start();				//开始执行线程
	}
}
