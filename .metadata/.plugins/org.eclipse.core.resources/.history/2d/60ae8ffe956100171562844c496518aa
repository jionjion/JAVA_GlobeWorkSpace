package javaAnnotation;
/**解析注解*/
public class ParseDescription {

	public static void main(String[] args) throws Exception {
		//使用类加载器加载类
		Class clazz  = Class.forName("javaAnnotation.UseDescription");
		
		//找到类上的注解,判断是否存在
		boolean isExist = clazz.isAnnotationPresent(Description.class);
		//拿到注解实例
		if (isExist) {
			//获得注解对象
			Description description = (Description) clazz.getAnnotation(Description.class);
			System.out.println("注解的名字为:"+description.value());
		}
	}
}
