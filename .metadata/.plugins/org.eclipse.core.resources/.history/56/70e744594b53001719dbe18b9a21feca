package redis;

import redis.clients.jedis.Jedis;

/**连接redis,导入jedis.jar*/
public class RedisConnect {

	public void testOne() {
		//创建数据库连接,指定IP,端口,超时时间
		Jedis jedis = new Jedis("127.0.0.1", 6379, 2000);
		//保存数据
		jedis.set("name", "张谦");
		//获取数据
		String name = jedis.get("name");
		//打印输出
		System.out.println(name);
		//释放资源
		jedis.close();
	}
}
