package javaEail.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;

import javaEail.bean.User;
import javaEail.until.Until;

/**将业务表同步到数据库中*/
public class EmailDao {

	/**保存用户数据的*/
	public void regist(User user)  throws Exception{
		
		String sql = " insert into userEmail value (?,?,?,?,?,?,?) ";
		Connection connection = Until.getConnect();
		PreparedStatement preparedStatement = connection.prepareStatement(sql);
		Object[] values = { ,user.getUsername(),user.(),
				user.(),user.(),user.(),user.()}; 
		preparedStatement.setInt(user.getUid(), 1);
		preparedStatement.setString(user.getUsername(), 2);
		preparedStatement.setInt(user.getPassword(), 3);
		preparedStatement.setInt(user.getNickname(), 4);
		preparedStatement.setInt(user.getEmail(), 5);
		preparedStatement.setInt(user.getState(), 6);
		preparedStatement.setInt(user.getCode(), 7);
		
		preparedStatement.execute();
		
	}

}
